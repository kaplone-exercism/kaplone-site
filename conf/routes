# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()
GET     /cv                         controllers.ControleurCV.afficher(article = "")
GET     /cv/:article                controllers.ControleurCV.afficher(article: String)
GET     /billet                     controllers.ControleurBillet.afficher(article = "")
GET     /billet/:article            controllers.ControleurBillet.afficher(article: String)
GET     /lien                       controllers.ControleurLien.afficher(article = "")
GET     /lien/:article              controllers.ControleurLien.afficher(article: String)
GET     /scores                     controllers.ControleurResultats.afficherResultats(niveau = "")
GET     /scores/:niveau             controllers.ControleurResultats.afficherResultats(niveau: String)

#switch to api routes
->  /API api.Routes

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)